{% extends 'view.twig' %}

{% block content %}
        <h1>Registrarse</h1>
        {% if mensaje %}
            <p class="invalid-pass-message">{{mensaje}}</p>
        {% endif %}
        <form name="form_register" action="/signin" method="POST" class="form-account">
            <label for="nombre">Nombre</label>
            <input type="text" id="nombre" name="nombre" tabindex="1" required autofocus>
            <label for="apellido">Apellido</label>
            <input type="text" id="apellido" name="apellido" tabindex="2" required>
            <label for="username">Nombre de usuario</label>
            <input type="text" id="username" name="username" tabindex="3" required>
            <label for="email">Correo electrónico</label>
            <input type="email" id="email" name="email" tabindex="4" required>
            <label for="password">Contraseña</label>
            <input type="password" id="password" name="password" tabindex="5" required>
            <label for="repeat-password">Confirmar contraseña</label>
            <input type="password" id="repeatPassword" name="repeatPassword" tabindex="6" required>
            <input type="submit" value="Crear cuenta" class="submit" tabindex="7" title="Presiona para crear tu cuenta">
            <a href="/login" tabindex="8">¿Ya tenés cuenta? Ingresá aca</a>
        </form>
        {% if mensaje %}
            <script>
            Swal.fire({
                icon: "error",
                title: "Error!",
                text: "{{mensaje}}",
                customClass: {
                    title: "swal-title",
                    content: "swal-content",
                    confirmButton: "assemblePcButton",
                    cancelButton: "assemblePcButton"
                }
            });
            </script>
        {% endif %}
{% endblock %}