{% extends 'view.twig' %}

{% block main_class %}product-unit{% endblock %}

{% block content %}
    <picture class="products-list">
        <img src= "{{product.path_img}}" > 
    </picture>
    <section id="{{ product.id }}">
        <h3>{{product.description}}</h3>
        <p> 
            {{product.price}}$
            <br>
            {{product.stock}} unidades restantes
        </p>
        <h4>Características</h4>
        <ul>
            {% for key, value in productSpecific %}
                <li>{{key}}: {{value}}</li>
            {% endfor %}
        </ul>
        <form class="addStockForm">
            <!--<div class="input-group"> -->
            <label for="quantityAdd">Cantidad de stock a añadir</label>
            <input type="number" id="quantityAdd" name="quantityAdd" 
                    class="searchbar-input" tabindex="1" autocomplete="on" autofocus required 
                       min="1" max="{{ product.stock }}">
            <!-- </div> -->
            <input type="hidden" name="product_id" value="{{ product.id }}">
            <input type="submit" value="Añadir stock" class="submit form-submit" title="Presiona para añadir stock">
        </form>
        <form class="reduceStockForm">
            <!--<div class="input-group"> -->
            <label for="quantityReduce">Cantidad de stock a reducir</label>
            <input type="number" id="quantityReduce" name="quantityReduce" 
                    class="searchbar-input" tabindex="1" autocomplete="on" autofocus required 
                       min="1" max="{{ product.stock }}">
            <!-- </div> -->
            <input type="hidden" name="product_id" value="{{ product.id }}">
            <input type="submit" value="Eliminar stock" class="submit form-submit" title="Presiona para eliminar stock">
        </form>
        <form class="DeleteProductForm">
            <!--<div class="input-group"> -->
            <input type="hidden" name="product_id" value="{{ product.id }}">
            <input type="submit" value="Eliminar producto" class="submit form-submit" title="Presiona para eliminar producto">
        </form>
    </section>
{% endblock %}