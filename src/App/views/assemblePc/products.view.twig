{% block content %}
        <h2>Productos</h2>
        <form id="search-form" class="searchbar-form">
            <label for="searchbar-templates">Buscar</label>
            <input type="text" id="searchbar-templates" name="searchbar-templates" class="searchbar-input" tabindex="1" autocomplete="on" autofocus>

            <input type="submit" value="Buscar" class="submit searchbar-submit">

            <fieldset class="search-fieldset">
