<form action="/create_product" method="post">
    <legend>Alta de Memoria</legend>
    
    <label for="speed">Velocidad:</label>
    <input type="number" id="speed" name="speed"><br>

    <label for="modules">Módulos:</label>
    <input type="text" id="modules" name="modules" maxlength="20"><br>

    <label for="description">Descripción:</label>
    <input type="text" id="description" name="description" maxlength="512"><br>

    <label for="price">Precio:</label>
    <input type="number" step="0.01" id="price" name="price"><br>

    <label for="stock">Stock:</label>
    <input type="number" id="stock" name="stock"><br>

    <input type="submit" value="Dar de Alta">
</form>