<form action="/create_product" method="post" enctype="multipart/form-data" class="new-product-form">
    <legend>Alta de Motherboard</legend>

    <input type="hidden" id="componentType" name="componentType" value={{type}} required>

    <label for="socket">Socket:</label>
    <input type="text" id="socket" name="socket" maxlength="20" required>
    
    <label for="memory_slots">Memory Slots:</label>
    <input type="number" id="memory_slots" name="memory_slots" required>
    
    <label for="description">Description:</label>
    <input type="text" id="description" name="description" maxlength="512" required>
    
    <label for="price">Price:</label>
    <input type="number" id="price" name="price" step="0.01" required>
    
    <label for="stock">Stock:</label>
    <input type="number" id="stock" name="stock" required>

    {% include 'intranet/drag_and_drop.view.twig' %}
    
    <input type="submit" value="Submit">
</form>