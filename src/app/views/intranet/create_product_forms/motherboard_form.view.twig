<form action="/create_product" method="post">
    <label for="socket">Socket:</label>
    <input type="text" id="socket" name="socket" maxlength="20" required><br>
    
    <label for="memory_slot">Memory Slot:</label>
    <input type="number" id="memory_slot" name="memory_slot" required><br>
    
    <label for="description">Description:</label>
    <input type="text" id="description" name="description" maxlength="512" required><br>
    
    <label for="price">Price:</label>
    <input type="number" id="price" name="price" step="0.01" required><br>
    
    <label for="stock">Stock:</label>
    <input type="number" id="stock" name="stock" required><br>
    
    <input type="submit" value="Submit">
</form>