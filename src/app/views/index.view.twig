{% extends 'view.twig' %}

{% block content %}
        <section class="background-pc-index">
            <h2>
                <a href="/assemble_pc" class="boton-anchor">Crea tu propia PC, ya!</a>
            </h2>
        </section>
        <section class="index-products">
            <h2>
                Ultimos productos
            </h2>
            {% for item in products %}
            <article class="product">
                <picture>
                    {# <img src= "{{item.pathImg}}" > #}
                </picture>
                <h3>{{item.description}}</h3>
                <p> 
                    {{item.stock}} - ${{item.price}}
                </p>
            </article>
            {% endfor %}
        </section>
{% endblock %}